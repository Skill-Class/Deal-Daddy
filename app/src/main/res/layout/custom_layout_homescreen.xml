        <TextView
            android:id="@+id/textView811"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/ovo"
            android:text="Sold By : FashionTech"
            android:textSize="10sp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView911"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView9111"
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic3"
            app:layout_constraintStart_toEndOf="@+id/imageView911"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8111"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/ovo"
            android:text="Sold By : FashionTech"
            android:textSize="10sp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView811"
            app:layout_constraintTop_toBottomOf="@+id/imageView9111"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView91111"
            android:layout_width="80dp"
            android:layout_height="104dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView9111"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView81111"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/ovo"
            android:text="Sold By : FashionTech"
            android:textSize="10sp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView8111"
            app:layout_constraintStart_toEndOf="@+id/textView81"
            app:layout_constraintTop_toBottomOf="@+id/imageView91111"
            app:layout_constraintVertical_bias="0.2" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>